<% if current_user %>
    <script>window.location.href = "/dashboard";</script>
<% end %>
<main>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center orange-text">Entrar</h1>
      <br><br>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col s12 m6 offset-m3">
        <%= form_tag '/login' do %>
            <div class="row">
              <div class="input-field col s12">
                <input id="email" name="email" type="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" name="password" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= submit_tag 'Entrar', class: 'waves-effect waves-light btn' %>
              </div>
            </div>
        <% end %>
        <% if flash[:error] %>
            <div class="card-content"><%= flash[:error] %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>