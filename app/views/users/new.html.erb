<main>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center orange-text">Registar novo utilizador</h1>
      <br><br>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <%= form_for :user, url: '/users' do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <input id="name" name="user[name]" type="text" class="validate">
                <label for="name">Nome</label>
              </div>
              <div class="input-field col s6">
                <input id="email" name="user[email]" type="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" name="user[password]" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password_confirmation" name="user[password_confirmation]" type="password" class="validate">
                <label for="password_confirmation">Password Confirmation</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <select id ="userType" name="user[userType]">
                  <option value="" disabled selected>Escolha a opção</option>
                  <option value="1">Moderador</option>
                  <option value="2">Utilizador</option>
                </select>
                <label>Tipo de utilizador</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <button class="waves-effect waves-light btn" type="submit" name="submit">Submeter</button>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</main>