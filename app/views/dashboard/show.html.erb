<main>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <h1 class="header center orange-text">Detalhes</h1>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h5>Titulo: </h5>
      </div>
      <div class="col s6 center-align">
        <h5><%= @project.title %></h5>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col s6">
        <h5>Descricão: </h5>
      </div>
      <div class="col s6 center-align">
        <h5><%= @project.description %></h5>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col s6 ">
        <h5>Hora de abertura: </h5>
      </div>
      <div class="col s6 center-align">
        <h5><%= @project.openTime %></h5>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col s6">
        <h5>Hora de fecho: </h5>
      </div>
      <div class="col s6 center-align">
        <h5><%= @project.closeTime %></h5>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col s6">
        <h5>Data de criação: </h5>
      </div>
      <div class="col s6 center-align">
        <h5><%= @project.created_at %></h5>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col s6">
        <h5>Total de submissões: </h5>
      </div>
      <div class="col s6 center-align">
        <% @submissions = Submission.where(project_id: @project.id) %>
        <h5><%= @submissions.size %></h5>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 center-align">
        <%= button_to 'Remover', {:id => @project.id}, :method => :delete, :class => 'waves-effect waves-light btn'%>
      </div>
    </div>
  </div>
</main>