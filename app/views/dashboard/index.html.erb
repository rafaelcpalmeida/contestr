<main>
  <div class="breadcrumb grey lighten-3">
    <h6>
      Dashboard
    </h6>
  </div>
  <br><br>
  <div class="container">
    <h4>Current Projects</h4>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Number of Submitions</th>
        <th>Remaing Time</th>
      </tr>
      </thead>
      <tbody>

      <% @projects.each do |c| %>
      <% @submissions = Submission.where(project_id: c.id) %>
          <tr>
            <td><%= c.title %> </td>
            <td><%= @submissions.size %> </td>
            <td><%= distance_of_time_in_words(Time.now,  c.closeTime) %> </td>
            <% if current_user.userType == 1 %>
                <td><%= link_to 'Ver', {:action => 'show', :controller=> 'projects', :id => c.id}, class: 'waves-effect waves-light btn' %></td>
            <% else %>
                <% if Submission.where(:project_id => c.id, :user_id => current_user.id).empty? %>
                  <td><%= link_to 'Submeter', {:action => 'new', :controller=> 'submissions', :project_id => c.id}, class: 'waves-effect waves-light btn' %></td>
                <% else %>
                    <td>Submetido!</td>
              <% end %>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</main>