<main>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="header center orange-text">Criar novo concurso</h1>
      <br><br>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <%= form_for :projects, url: '/projects/create' do |f| %>
      <div class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="name" name="projects[name]" type="text" class="validate">
            <label for="name">Nome</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="description" name="projects[description]" class="materialize-textarea"></textarea>
            <label for="description">Descrição</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <input id="args" name="projects[args]" type="text" class="validate">
            <label for="args">Argumentos</label>
          </div>
          <div class="input-field col s6">
            <input id="res" name="projects[result]" type="text" class="validate">
            <label for="res">Resultado</label>
          </div>
        </div>
        <div class="row">
          <div class="file-field input-field">
            <div class="btn">
              <span>PDF</span>
              <%= f.file_field :file %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
        </div>
        <span>Data e hora de abertura</span>
        <div class="row">
          <div class="input-field col s6">
            <input type="text" name="projects[start_date]" class="datepicker">
          </div>
          <div class="input-field col s6">
            <input type="text" name="projects[start_hour]" class="timepicker">
          </div>
        </div>
        <span>Data e hora de fecho</span>
        <div id="teste" class="row">
          <div class="input-field col s6">
            <input type="text" name="projects[finish_date]" class="datepicker">
          </div>
          <div class="input-field col s6">
            <input type="text" name="projects[finish_hour]" class="timepicker">
          </div>
        </div>
        <span>Linguagens</span><br><br>
          <div class="row">
            <div class="col s3">
              <input type="checkbox" id="C" name="projects[C]"/>
              <label for="C">C</label>
            </div>
            <div class="col s3">
              <input type="checkbox" id="Java" name="projects[Java]"/>
              <label for="Java">Java</label>
            </div>
            <div class="col s3">
              <input type="checkbox" id="php" name="projects[PHP]"/>
              <label for="php">PHP</label>
            </div>
            <div class="col s3">
              <input type="checkbox" id="python" name="projects[Python]"/>
              <label for="python">Python</label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.submit 'Submeter', class: 'waves-effect waves-light btn' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</main>
<%= javascript_include_tag('new_project.js') %>